<p style="color: green"><%= notice %></p>

<% if @brands.count > 0 %>

  <h1><%= Brand.model_name.human(count: @brands.count) %></h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= @brands.human_attribute_name(:brand_name) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= brand.brand_name %></td>
          <td><%= link_to t('links.show'), brand %></td>
          <td><%= link_to t('links.edit'), edit_brand_path(brand) %></td>
          <td><%= link_to t('links.delete'), brand, method: :delete, data: { turbo_method: :delete, turbo_confirm: t('messages.warning', :brand => brand.brand_name) + t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <br>

  <P class="font-weight-bold text-danger text-center"> <%= t('empty.brand') %> </P>

  <br>
  
<% end %> 


<br>

<%= link_to t('new.brand'), new_brand_path, class:"btn btn-primary" %>

